<UserControl x:Class="KimiStudio.BgmOnWp.Views.RecentlyWatchedView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:c="clr-namespace:KimiStudio.Controls;assembly=KimiStudio.Controls"
             xmlns:cal="http://www.caliburnproject.org" mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="800">
	<UserControl.Resources>
		
	</UserControl.Resources>
    <Grid x:Name="LayoutRoot">
        <ListBox ItemsSource="{Binding Items}" Style="{StaticResource NoScrollWrapListBox}"
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <c:Thumbnail Text="{Binding Name}" Margin="0,0,20,20" UriSource="{Binding UriSource}" Width="173" Height="173" 
                              cal:Message.Attach="[Event Tap] = [Action OnTap($dataContext)]" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
