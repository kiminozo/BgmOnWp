<UserControl x:Class="KimiStudio.BgmOnWp.Views.SubjectSummaryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:c="clr-namespace:KimiStudio.Controls;assembly=KimiStudio.Controls" mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="600" d:DesignWidth="480">
    
    <Grid x:Name="LayoutRoot">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280" />
            <ColumnDefinition Width="215*" />
        </Grid.ColumnDefinitions>
        <c:Thumbnail UriSource="{Binding UriSource}" IsShowText="False"
            Width="250" Height="368" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="15,15,0,0" />
        <StackPanel Grid.Column="1">
            <TextBlock Text="{Binding Name}" Margin="0,10" TextTrimming="WordEllipsis" />
            <TextBlock Text="{Binding CnName}" Margin="0,10" TextTrimming="WordEllipsis" />
        </StackPanel>
    </Grid>
</UserControl>
