<phone:PhoneApplicationPage
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
	xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
	xmlns:controls="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:cal="http://www.caliburnproject.org" xmlns:c="clr-namespace:KimiStudio.Controls;assembly=KimiStudio.Controls"
	xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit" mc:Ignorable="d" d:DesignWidth="480" d:DesignHeight="696" 
	x:Class="KimiStudio.BgmOnWp.Views.MainPage"
	FontFamily="{StaticResource PhoneFontFamilyNormal}"
	FontSize="{StaticResource PhoneFontSizeNormal}"
	Foreground="{StaticResource PhoneForegroundBrush}"
	SupportedOrientations="Portrait" Orientation="Portrait"
	shell:SystemTray.IsVisible="True" Style="{StaticResource TransitionPageStyle}">
	<phone:PhoneApplicationPage.Resources>
		<Style x:Key="VerticalTextBlockStyle" TargetType="TextBlock">
			<Setter Property="Width" Value="50"/>
			<Setter Property="FontSize" Value="{StaticResource PhoneFontSizeExtraLarge}"/>
			<Setter Property="Margin" Value="30,50,30,0"/>
			<Setter Property="TextWrapping" Value="Wrap"/>
			<Setter Property="VerticalAlignment" Value="Top"/>
			<Setter Property="HorizontalAlignment" Value="Stretch"/>
			
		</Style>
		
	</phone:PhoneApplicationPage.Resources>

    <!--LayoutRoot 是放置所有页面内容的根网格-->
    <Grid x:Name="LayoutRoot" Background="Transparent">
        <!--透视控件-->
        <controls:Panorama Title="Bagumi" >
            <controls:PanoramaItem Orientation="Horizontal">
            	<controls:PanoramaItem.Header>
            		 <TextBlock Text="最近观看" FontSize="{StaticResource PhoneFontSizeExtraLarge}"/>       	
				</controls:PanoramaItem.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="390" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <ListBox ItemsSource="{Binding Items}" Style="{StaticResource NoScrollWrapListBox}"
                  HorizontalAlignment="Stretch" Width="800" VerticalAlignment="Stretch" Margin="0" >
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <c:Thumbnail Text="{Binding Name}" Margin="0,0,20,20" UriSource="{Binding UriSource}" Width="173" Height="173" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <HyperlinkButton Name="NavWatchings" Content="查看全部" Grid.Row="1"
					 HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0" 
					 FontSize="{StaticResource PhoneFontSizeLarge}" Style="{StaticResource HyperlinkText}" />
                </Grid>
            </controls:PanoramaItem>
            <controls:PanoramaItem>
            	<controls:PanoramaItem.Header>
            		 <TextBlock Text="类别" FontSize="{StaticResource PhoneFontSizeExtraLarge}"/>       	
				</controls:PanoramaItem.Header>
                    <StackPanel Grid.Row="1" >                        
                        <HyperlinkButton Content="全部" Grid.Row="1"
					 HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,10" 
					 FontSize="{StaticResource PhoneFontSizeLarge}" Style="{StaticResource HyperlinkText}" />
						<HyperlinkButton Content="动画" Grid.Row="1"
					 HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,10" 
					 FontSize="{StaticResource PhoneFontSizeLarge}" Style="{StaticResource HyperlinkText}" />
						<HyperlinkButton Content="三次元" Grid.Row="1"
					 HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,10" 
					 FontSize="{StaticResource PhoneFontSizeLarge}" Style="{StaticResource HyperlinkText}" />
					</StackPanel>
            </controls:PanoramaItem>
        </controls:Panorama>
    </Grid>
    <phone:PhoneApplicationPage.ApplicationBar>
        <shell:ApplicationBar Mode="Minimized" IsVisible="True" IsMenuEnabled="True" Opacity="1" 
                              BackgroundColor="#99000000" StateChanged="OnAppBarStateChanged">
            <shell:ApplicationBar.MenuItems>
                <shell:ApplicationBarMenuItem Text="配置"/>
            </shell:ApplicationBar.MenuItems>
        </shell:ApplicationBar>
    </phone:PhoneApplicationPage.ApplicationBar>
</phone:PhoneApplicationPage>
