<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:KimiStudio.Controls">


    <Style TargetType="local:Thumbnail">
        <Setter Property="Width" Value="173"/>
        <Setter Property="Height" Value="173"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Canvas Background="Gray">
                        <Rectangle HorizontalAlignment="Center" Margin="0" Height="173" Width="173">
                            <Rectangle.Fill>
                                <ImageBrush x:Name="imageBrush" Stretch="UniformToFill"/>
                            </Rectangle.Fill>
                        </Rectangle>
                        <Rectangle Fill="#99000000" Height="28" Canvas.Top="145" Width="173"/>
                        <TextBlock x:Name="imageName" Canvas.Top="145" 
                                   VerticalAlignment="Bottom" Width="150" Margin="10,0" Foreground="White" 
                                   IsHitTestVisible="True" TextTrimming="WordEllipsis" />
                    </Canvas>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
